# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: ID!
  name: String!
}

type Post {
  id: ID!
  contentText: String!
  publicationDate: Int!
  userId: ID!
}

type Query {
  posts: [Post!]!
}

input NewPost {
  text: String!
  userId: ID!
}

type Mutation {
  createPost(input: NewPost!): Post!
}
